/* pages/mine/mine.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: #eee;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.top {
  width: 100%;
  height: 284rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fada85;
}

.userinfo-left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userinfo-nickname {
  font-size: 36rpx;
  color: #b36f26;
  margin-left: 32rpx;
}

.userinfo-avatar {
  margin-left: 32rpx;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 1rpx solid #fff;
}

.vant-cell {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.cell-view {
  width: 100%;
  height: 98rpx;
  display: flex;
  line-height: 98rpx;
  border-bottom: 1rpx solid #f4f4f4;
  background-color: #fff;
  padding-left: 36rpx;
  font-size: 28rpx;
  color: #333;
}

.contact-btn {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  background: #fff !important;
  color: #333 !important;
  line-height: 100rpx;
  font-size: 28rpx;
  /* color: #333; *//* background-color: #fff; */
  text-align: left;
  border: 0;
  outline: 0;
}

.contact-btn::after {
  border: none;
  border-color: transparent;
  display: none;
  border-width: 0;
}

.line-view{
  width: 100%;
  height: 2rpx;
  background-color: #f4f4f4;

}

/* 弹窗 */

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  /* padding: 20rpx 32rpx; */
  padding-bottom: 20rpx;
  text-align: center;
  font-size: 30rpx;
  color: #c6c6c6;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
  text-align: center;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}

button::after {
  border: none;
}
