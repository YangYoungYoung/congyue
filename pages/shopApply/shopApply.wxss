/* pages/shopApply/shopApply.wxss */

scroll-view {
  white-space: nowrap;
  height: 100%;
  width: 100%; /*从效果来看, 如果不设置宽度, scroll-view默认为屏幕宽度, 因此可以设置一下其宽度*/
}

/*隐藏滚动条*/

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-color: #eee;
}

.top-view {
  width: 678rpx;
  height: 300rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 36rpx;
}

.item-view {
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 100rpx;
  align-items: center;
}

.item-text {
  font-size: 30rpx;
  color: #707070;
  margin-left: 38rpx;
}

.item-input {
  width: 500rpx;
  height: 100%;
  line-height: 100rpx;
  font-size: 30rpx;
  margin-left: 20rpx;
  color: #707070;
  /* background-color: #eee; */
}

.information-title {
  width: 100%;
  margin-top: 32rpx;
}

.legalPeople-title {
  width: 100%;
  margin-top: 10rpx;
}

.legalPeople-text {
  font-size: 32rpx;
  color: #313131;
  margin-left: 96rpx;
  font-weight: bold;
}

.information-text {
  font-size: 32rpx;
  color: #313131;
  margin-left: 32rpx;
  font-weight: bold;
}

.infomation-view {
  width: 80%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.info-text {
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  color: #313131;
  font-family: PingFangSC-Medium;
  font-weight: bold;
}

.info-input {
  width: 442rpx;
  height: 48rpx;
  background: rgba(251, 251, 251, 1);
  border-radius: 8rpx;
  border: 1rpx solid rgba(193, 193, 193, 1);
  margin-left: 32rpx;
  padding-left: 20rpx;
}

.upload-view {
  width: 558rpx;
  height: 302rpx;
  background: rgba(251, 251, 251, 1);
  border-radius: 12rpx;
  border: 2rpx solid rgba(193, 193, 193, 1);
  margin-top: 24rpx;
  text-align: center;
  align-items: center;
  display: flex;
  flex-direction: column;
}

.upload-img {
  width: 100%;
  height: 100%;
}

.upload-add {
  width: 64rpx;
  height: 64rpx;
  margin-top: 126rpx;
}

.upload-text {
  color: #616161;
  font-size: 28rpx;
  font-weight: bold;
  /* font-family:PingFangSC-Medium; */
  margin-top: 24rpx;
}

.shop-info-view {
  width: 100%;
  /* height: 138rpx; */
  background: rgba(251, 251, 251, 1);
  border: 1rpx solid rgba(193, 193, 193, 1);
  margin-top: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.submit-btn {
  width: 678rpx;
  height: 100rpx;
  background-color: #e52638;
  border-radius: 20rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  font-size: 34rpx;
  margin-bottom: 80rpx;
  margin-top: 80rpx;
}
