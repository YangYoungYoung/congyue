/**index.wxss**/

page {
  width: 100%;
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.scroll {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  align-items: center;
  display: flex;
  flex-direction: column;
  padding-bottom: 100rpx;
}

/*隐藏滚动条*/

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.swiper-view {
  width: 100%;
  height: 300rpx;
  display: block;
}

.banner-image {
  width: 100%;
  height: 300rpx;
}

.video-text {
  width: 100%;
  margin-top: 36rpx;
  margin-left: 36rpx;
  font-size: 34rpx;
  color: #343434;
}

.line-view {
  width: 100%;
  height: 10rpx;
  background-color: #ccc;
  margin-top: 28rpx;
}

.video-view {
  width: 100%;
  height: 380rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  margin-top: 30rpx;
}

/* .video-content{
  width: 676rpx;
  height: 380rpx;
  background-color: #fff;
} */

.videoCss {
  width: 676rpx;
  height: 380rpx;
  display: block;
}

.video-bottom {
  font-size: 28rpx;
  color: #583924;
  margin-top: 24rpx;
  margin-left: 36rpx;
}

.text-title {
  font-size: 34rpx;
  color: #343434;
  margin-top: 11rpx;
  margin-left: 36rpx;
}

.article-view {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.article-item {
  margin-top: 36rpx;
  width: 678rpx;
  display: flex;
  flex-direction: row;
  /* background-color: red; */
}

.article-img {
  width: 340rpx;
  height: 226rpx;
  /* background-color: #343434; */
}

.article-right {
  margin-left: 10rpx;
  /* height: 166rpx; */
  display: flex;
  flex-direction: column;
}

.article-title {
  font-size: 28rpx;
  color: #343434;
  display: block;
 
  /* line-height: 40rpx; */
  /* height: 120rpx; */
  overflow: hidden;
  margin-top: 15rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.article-content {
  font-size: 26rpx;
  color: #707070;
  /* word-break:break-all; */
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-all;
  -webkit-box-orient: vertical;
  /* white-space: normal !important; */
  -webkit-line-clamp: 3; /*  行数*/
  
}

.article-line {
  width: 100%;
  height: 2rpx;
  background-color: #ccc;
  margin-top: 36rpx;
}
